---
import Layout from "../layouts/Layout.astro";
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";

const plans = [
	{
		label: "Perpetual License",
		price: 49,
		originalPrice: 69,
		period: "one-time payment",
		features: [
			"All current features",
			"Free updates for one year",
			"Use forever, even after updates expire",
			"Regional pricing available",
		],
		cta: "Buy Now",
		ctaHref: "#",
		disabled: false,
	},
	{
		label: "Subscription",
		price: null,
		period: "per month",
		features: [
			"All current features",
			"Continuous updates",
			"Cancel anytime",
			"Regional pricing available",
		],
		cta: "Soon",
		ctaHref: "#",
		disabled: true,
	},
];
---

<Layout title="Pricing â€” DB Atelier">
	<Nav />

	<section class="pricing">
		<h1>Pricing</h1>
		<p class="pricing-subtitle">One-time purchase or subscribe.</p>

		<div class="pricing-cards">
			{
				plans.map((plan) => (
					<div
						class:list={[
							"pricing-card",
							{ "pricing-card-disabled": plan.disabled },
						]}
					>
						<div class="pricing-card-header">
							<span class="pricing-label">{plan.label}</span>
							<div class="pricing-amount">
								{plan.price !== null ? (
									<>
										<span class="pricing-dollar">$</span>
										<span class="pricing-value">{plan.price}</span>
										{plan.originalPrice && (
											<span class="pricing-original">
												${plan.originalPrice}
											</span>
										)}
									</>
								) : (
									<span class="pricing-value pricing-value-tbd">&mdash;</span>
								)}
							</div>
							<span class="pricing-period">{plan.period}</span>
						</div>

						<ul class="pricing-features">
							{plan.features.map((feature) => (
								<li>{feature}</li>
							))}
						</ul>

						{plan.disabled ? (
							<span class="btn pricing-cta pricing-cta-disabled">
								{plan.cta}
							</span>
						) : (
							<a href={plan.ctaHref} class="btn pricing-cta">
								{plan.cta}
							</a>
						)}
					</div>
				))
			}
		</div>
	</section>

	<Footer />
</Layout>

<style>
	.pricing {
		text-align: center;
		max-width: 720px;
		margin: 72px auto 0;
		padding: 0 24px;
	}

	.pricing h1 {
		font-size: 24px;
		font-weight: 700;
		letter-spacing: -0.02em;
		margin-bottom: 8px;
	}

	.pricing-subtitle {
		font-size: 16px;
		color: var(--text-muted);
		margin-bottom: 40px;
	}

	.pricing-cards {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 24px;
	}

	.pricing-card {
		position: relative;
		border: 1px solid var(--border);
		border-radius: var(--radius);
		padding: 40px 32px;
		background: var(--bg-card);
	}

	.pricing-card-disabled {
		opacity: 0.4;
		pointer-events: none;
	}

	.pricing-card-header {
		margin-bottom: 32px;
	}

	.pricing-label {
		font-size: 14px;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 0.05em;
		color: var(--text-muted);
	}

	.pricing-amount {
		margin-top: 12px;
		line-height: 1;
	}

	.pricing-dollar {
		font-size: 24px;
		font-weight: 600;
		vertical-align: top;
		position: relative;
		top: 8px;
	}

	.pricing-value {
		font-size: 64px;
		font-weight: 700;
		letter-spacing: -0.03em;
	}

	.pricing-original {
		margin-left: 10px;
		font-size: 24px;
		font-weight: 500;
		color: var(--text-muted);
		opacity: 0.5;
		text-decoration: line-through;
		vertical-align: middle;
	}

	.pricing-value-tbd {
		font-size: 40px;
	}

	.pricing-period {
		display: block;
		margin-top: 8px;
		font-size: 14px;
		color: var(--text-muted);
	}

	.pricing-features {
		list-style: none;
		text-align: left;
		margin-bottom: 32px;
	}

	.pricing-features li {
		padding: 8px 0;
		font-size: 15px;
		color: var(--text-muted);
		border-bottom: 1px solid var(--border);
	}

	.pricing-features li:last-child {
		border-bottom: none;
	}

	.btn {
		display: inline-flex;
		align-items: center;
		gap: 8px;
		padding: 10px 22px;
		background: transparent;
		color: var(--accent);
		font-size: 15px;
		font-weight: 600;
		border: 1px solid var(--accent);
		border-radius: 8px;
		cursor: pointer;
		text-decoration: none;
		transition:
			background 0.2s,
			color 0.2s;
	}

	.btn:hover {
		background: rgba(255, 255, 255, 0.08);
		color: #fff;
	}

	.pricing-cta {
		width: 100%;
		justify-content: center;
	}

	.pricing-cta-disabled {
		cursor: default;
		border-color: var(--border);
		color: var(--text-muted);
	}

	@media (max-width: 768px) {
		.pricing-cards {
			grid-template-columns: 1fr;
		}
	}
</style>
