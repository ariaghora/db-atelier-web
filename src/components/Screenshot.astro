<section class="screenshot-section">
	<div class="window-frame">
		<div class="comparison-container" id="comparison">
			<div class="comparison-dark">
				<img src="/screenshot-dark.webp" alt="DB Atelier dark mode" draggable="false" />
			</div>
			<div class="comparison-light" id="comparisonLight">
				<img src="/screenshot-light.webp" alt="DB Atelier light mode" draggable="false" />
			</div>
		</div>
	</div>
</section>

<style>
	.screenshot-section {
		max-width: 1100px;
		margin: 32px auto 0;
		padding: 0 24px;
	}

	.window-frame {
		border-radius: 12px;
		overflow: hidden;
		box-shadow:
			0 0 0 1px rgba(0, 0, 0, 0.3),
			0 8px 40px rgba(0, 0, 0, 0.4),
			0 24px 80px rgba(0, 0, 0, 0.3);
	}

	.comparison-container {
		position: relative;
		overflow: hidden;
	}

	.comparison-container img {
		display: block;
		width: 100%;
		height: auto;
	}

	.comparison-dark {
		position: relative;
	}

	.comparison-light {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		clip-path: polygon(0 0, 55% 0, 45% 100%, 0 100%);
	}

	@media (max-width: 768px) {
		.screenshot-section {
			margin-top: 48px;
		}
	}
</style>
