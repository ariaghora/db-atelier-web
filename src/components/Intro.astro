<section class="intro">
	<h1>A pretty and snappy desktop database client</h1>
	<p>
		Multiple connections, split panes, tabbed views. A feature-packed lightweight app
		for browsing and managing your databases in one place.
	</p>
	<div class="intro-buttons">
		<a id="download-btn" href="#download" class="btn">
			<img src="/os-mac.svg" width="16" height="16" alt="macOS" />
			Download for macOS (Apple Silicon)<span class="download-size">· 0 MB</span>
		</a>
	</div>
	<div class="platform-note">
		<img src="/os-windows.svg" width="14" height="14" alt="Windows" />
		<img src="/os-linux.svg" width="14" height="14" alt="Linux" />
		<span>Windows & Linux coming soon</span>
	</div>
</section>

<script>
	fetch("https://cdn.dbatelier.app/releases/latest.json")
		.then((r) => r.json())
		.then((data) => {
			const v = data.version;
      const downloadSizeVal = data.platforms["darwin-aarch64"].size;
      console.log(downloadSizeVal);
      const downloadSizeEl = document.querySelector(".download-size")
      downloadSizeEl.innerText = `· ${downloadSizeVal} MB`;
			if (v) {
				const btn = document.getElementById("download-btn");
				if (btn) {
					const cdnUrl = `https://cdn.dbatelier.app/releases/DB Atelier_${v}_aarch64.dmg`;
					btn.setAttribute(
						"href",
						`/app/download?platform=macos&url=${encodeURIComponent(cdnUrl)}`
					);
				}
			}

		});


</script>

<style>
	.intro {
		text-align: center;
		max-width: 640px;
		margin: 72px auto 0;
		padding: 0 24px;
	}

	.intro h1 {
		font-size: 20px;
		font-weight: 600;
		letter-spacing: -0.01em;
		line-height: 1.4;
		margin-bottom: 10px;
	}

	.intro p {
		font-size: 16px;
		color: var(--text-muted);
		margin-bottom: 28px;
	}

	.intro-buttons {
		display: flex;
		gap: 12px;
		justify-content: center;
	}

	.btn {
		display: inline-flex;
		align-items: center;
		gap: 8px;
		padding: 10px 22px;
		background: transparent;
		color: var(--accent);
		font-size: 15px;
		font-weight: 600;
		border: 1px solid var(--accent);
		border-radius: 8px;
		cursor: pointer;
		text-decoration: none;
		transition:
			background 0.2s,
			color 0.2s;
	}

	.btn:hover {
		background: rgba(255, 255, 255, 0.08);
		color: #fff;
	}

	.btn-secondary {
		border-color: var(--border);
		color: var(--text-muted);
	}

	.btn-secondary:hover {
		background: rgba(255, 255, 255, 0.05);
		border-color: var(--text-muted);
		color: var(--text);
	}

	@media (max-width: 480px) {
		.intro-buttons {
			flex-direction: column;
			align-items: stretch;
		}

		.intro-buttons .btn {
			justify-content: center;
		}
	}

	.platform-note {
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 6px;
		margin-top: 16px;
		font-size: 13px;
		color: var(--text-muted);
		opacity: 0.7;
	}
</style>
